This project utilized data from the Netflix database stored at https://www.db-fiddle.com/f/pfsdrKi9cgCDp4Wwb77AF/0

SELECT people.show_ID, titles.type, titles.title
FROM "netflix_people" AS people
LEFT JOIN "netflix_titles_info" AS titles
ON people.show_id = titles.show_id;

--How many movie titles are there in the database? (movies only, not tv shows)

SELECT COUNT(*)
FROM "netflix_titles_info"
WHERE type = 'Movie';

--When was the most recent batch of tv shows and/or movies added to the database?
SELECT type, date_added, title
FROM "netflix_titles_info"
ORDER BY date_added desc;


select max(date(date_added))
FROM "netflix_titles_info";

--List all the movies and tv shows in alphabetical order.
SELECT title
FROM netflix_titles_info
ORDER BY title asc;

--Who was the Director for the movie The Starling?
SELECT director
FROM "netflix_people"
INNER JOIN "netflix_titles_info"
ON netflix_titles_info.show_id = netflix_people.show_id
WHERE title = 'The Starling';

--What is the oldest movie in the database and what year was it made?
SELECT title, release_year  
FROM "netflix_titles_info"
ORDER BY release_year asc;

SELECT title, release_year  
FROM "netflix_titles_info"
ORDER BY release_year asc
limit 1; 
